@model IEnumerable<WebApplication2.Models.Urun>
@{
    ViewBag.Title = "listele";
}
<style>
    .UrunInfo {
        text-align: right;
    }

    .UrunToplam {
        text-align: right;
    }
</style>
<br />
<br />
<h3 style="text-align:center;">Ürün Satış Raporu</h3>
<div class="container">
    <div class="row">
        <div class="col-md-8">


            <table id="example" class="table table-striped table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th>Urunler</th>
                        <th>Adet</th>
                        <th>Ciro</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Urunler</td>
                            <td class="UrunInfo">@(string.Format("{0:#,##0}", item.Adet))</td>
                            <td class="UrunInfo">@(string.Format("{0:#,##0}", item.Ciro))</td>
                        </tr>

                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>Genel Toplam</th>
                        <th class="UrunToplam">@(string.Format("{0:#,##0}", Model.Sum(x => x.Adet)))</th>
                        <th class="UrunToplam">@(string.Format("{0:#,##0}", Model.Sum(x => x.Ciro))) </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
@section csss{
    <link href="~/theme/datatables.min.css" rel="stylesheet" />

}

@section scripts{
    <script src="~/theme/datatables.min.js"></script>
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css">
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.4.1/css/buttons.dataTables.min.css">
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.print.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable({
                "lengthChange": false,
                // "order": [2, "asc"],
                ordering: false,
                dom: 'Bfrtip',
                buttons: [
                    'excel'
                ]
            });
        });
    </script>
}