@section csss{
    <link href="~/theme/datatables.min.css" rel="stylesheet" />
}

@section scripts{


    <script src="~/theme/datatables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable({

                "ajax": {
                    "url": "/SiparisRaporgenel/List",
                    "type": "POST",
                    "datatype": "json"
                },
                "lengthChange": false,
                "columns": [
                    { "data": "sipNo", "name": "sipNo", "autoWidth": true },
                    { "data": "kargoSatisKod", "name": "kargoSatisKod", "autoWidth": true },
                    { "data": "odemeTarih", "name": "odemeTarih", "autoWidth": true },
                    { "data": "kargolamaTarih", "name": "kargolamaTarih", "autoWidth": true },
                    { "data": "onaylamaTarih", "name": "onaylamaTarih", "autoWidth": true },
                    { "data": "kobi", "name": "kobi", "autoWidth": true },
                    { "data": "uye", "name": "uye", "autoWidth": true },
                    { "data": "urun", "name": "urun", "autoWidth": true },
                    { "data": "tutar", "name": "tutar", "autoWidth": true },
                    { "data": "tip", "name": "tip", "autoWidth": true },
                    { "data": "kargo", "name": "kargo", "autoWidth": true },
                    { "data": "sonDurum", "name": "sonDurum", "autoWidth": true },
                    { "data": "kobiDurum", "name": "kobiDurum", "autoWidth": true },
                    { "data": "SiparisAy", "name": "SiparisAy", "autoWidth": true },
                    { "data": "SiparisYil", "name": "SiparisYil", "autoWidth": true },
                    { "data": "TeslimSuresi", "name": "TeslimSuresi", "autoWidth": true },


                ],
                "processing": true,
                "serverSide": true,
                "order": [0, "desc"],
                scrollX: true
            });
        });
    </script>
    }