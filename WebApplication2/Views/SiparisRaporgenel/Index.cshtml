            </table>
        </div>
    </div>
</div>
@section csss{
    <link href="~/theme/datatables.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/theme/datatables.min.js"></script>
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css">
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.4.1/css/buttons.dataTables.min.css">
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable({

                "ajax": {
                    "url": "/SiparisRaporgenel/List",
                    "type": "POST",
                    "datatype": "json"
                },
                "lengthChange": false,
                "columns": [
                    { "data": "sipNo", "name": "sipNo", "autoWidth": true },
                    { "data": "kargoSatisKod", "name": "kargoSatisKod", "autoWidth": true },
                    { "data": "odemeTarih", "name": "odemeTarih", "autoWidth": true },
                    { "data": "kargolamaTarih", "name": "kargolamaTarih", "autoWidth": true },
                    { "data": "onaylamaTarih", "name": "onaylamaTarih", "autoWidth": true },
                    { "data": "kobi", "name": "kobi", "autoWidth": true },
                    { "data": "uye", "name": "uye", "autoWidth": true },
                    { "data": "urun", "name": "urun", "autoWidth": true },
                    { "data": "tutar", "name": "tutar", "autoWidth": true },
                    { "data": "tip", "name": "tip", "autoWidth": true },
                    { "data": "kargo", "name": "kargo", "autoWidth": true },
                    { "data": "sonDurum", "name": "sonDurum", "autoWidth": true },
                    { "data": "kobiDurum", "name": "kobiDurum", "autoWidth": true },
                    { "data": "SiparisAy", "name": "SiparisAy", "autoWidth": true },
                    { "data": "SiparisYil", "name": "SiparisYil", "autoWidth": true },
                    { "data": "TeslimSuresi", "name": "TeslimSuresi", "autoWidth": true },
                    { "data": "yorumVarmi", "name": "yorumVarmi", "autoWidth": true }

                ],
                "processing": true,
                "serverSide": true,
                "lengthChange": true,
                "order": [0, "desc"],
                scrollX: true,
                "pageLength": 25,
                dom: 'Bfrtip',
                buttons: [
                    'excel', 
                ]

            });
        });
    </script>
